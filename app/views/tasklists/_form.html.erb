
<%= form_for(tasklist) do |f| %>
  <% if tasklist.errors.any? %>
    <div class="alert alert-warning" id="error_explanation">
      <ul>
        <% tasklist.errors.full_messages.each do |tasklist| %>
          <li><%= tasklist %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :content, 'タスク' %>
    <%= f.text_field :content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :status, 'ステータス' %>
    <%= f.text_field :status, class: 'form-control' %>
  </div>

  <%= f.submit '投稿', class: 'btn btn-primary' %>
<% end %>
